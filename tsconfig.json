{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "Node16",
        "preserveConstEnums": true,
        "strictPropertyInitialization": false,
        "rootDir": "./src",
        "outDir": "./build",
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}